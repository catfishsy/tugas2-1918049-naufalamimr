<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:weightSum="3">

        <fragment
            android:id="@+id/fragment1"
            android:name="com.raywenderlich.pertemuan_2_1918049.Fragment1"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            tools:layout="@layout/fragment1" />

        <fragment
            android:id="@+id/fragment2"
            android:name="com.raywenderlich.pertemuan_2_1918049.Fragment2"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="365dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linear1"
        android:weightSum="3">

        <fragment
            android:id="@+id/fragment_3"
            android:name="com.raywenderlich.pertemuan_2_1918049.Fragment3"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="2" />

        <fragment
            android:id="@+id/fragment_4"
            android:name="com.raywenderlich.pertemuan_2_1918049.Fragment4"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
